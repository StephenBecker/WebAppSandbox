@{
    ViewBag.Title = "Drawing";
}

<h2>Drawing</h2>
<div class="col-xs-12" id="exericiseForCh12">
    <h2>Canvas Sharpshooter</h2>
    <div class="col-xs-10 col-lg-offset-1">
        <video id="myVideo" src="~/Content/Video/Video.mp4" controls="controls" width="360" height="240">
            your browser does not support html5 video
        </video>
    </div>
    <div class="col-xs-10 col-lg-offset-1">
        <input type="button" value="Take a Snapshot" id="btnSnapshot" />
    </div>
    <div class="col-xs-10 col-lg-offset-1">
        <canvas id="myCanvasEx" width="360" height="240">
            your browser does not support html5 canvas
        </canvas>
    </div>
</div>

<canvas id="myCanvas" width="800" height="600">
    You need a browser that supports HTML5!
</canvas>
<div class="col-xs-12">
    <input type="button" id="canvasGridControl" value="Add Grid">
    <input type="button" id="canvasDrawColoredBoxes" value="canvas Draw Colored Boxes">
    <input type="button" id="canvasAddGradient" value="canvas Add Gradient">
    <input type="button" id="testDraw" value="canvas testDraw">
</div>
<div class="col-xs-12">
    <svg width="500" height="300" xmlns="http://www.w3.org/2000/svg">
        <path d="m267 76 l-21 -4 -144 0 -90 47 0 54 11 11 23 0 15 -30 15 -10
              30 0 15 10 15 30 220 0 15 -30 15 -10 30 0 15 10 15 30 l25 0 7 -7
              -13 -38 -20 -10 -95 -15 z" fill="blue" id="carBody" />

        <path d="m267 76 l4 4 -3 0 0 5 -2 0 0 -5 -3 0 4 -4 z" fill="red" id="start" />
        <path d="m65 105 l40 -25 65 0 0 34 -112 0 z" fill="white" id="rearWindow" />
        <path d="m300 105 l-40 -25 -78 0 0 34 122 0 z" fill="white" id="frontWindow" />
        <circle r="35" cy="185" cx="90" fill="black" id="rearWheel" />
        <circle r="35" cy="185" cx="400" fill="black" id="frontWheel" />
        <circle r="25" cy="185" cx="90" fill="grey" id="rearhub" />
        <circle r="25" cy="185" cx="400" fill="grey" id="fronthub" />
    </svg>

    <img src="~/Content/Images/car.svg" />
</div>
<script>
    $(document).ready(function () {
        new App.Home.DrawingController();
    })
</script>
