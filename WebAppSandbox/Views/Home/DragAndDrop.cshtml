@{
    ViewBag.Title = "DragAndDrop";
}

<h2>DragAndDrop</h2>
<div class="col-xs-12">
    <h3>w/o data transfer object</h3>
    <div id="dndcontainer">

        <div id="hole1" class="hole">
            <div id="item1" draggable="true" class="item">1</div>
        </div>
        <div id="hole2" class="hole">
            <div id="item2" draggable="true" class="item">2</div>
        </div>
        <div id="hole3" class="hole">
            <div id="item3" draggable="true" class="item">3</div>
        </div>
        <div id="hole4" class="hole">
        </div>
    </div>
</div>
<div id="carlistDnD" class="col-xs-12">
    <h3>using data transfer object</h3>
    <p>What cars do you like?</p>
    <ul id="carList">
        <li draggable="true" data-value="car,Chevrolet">Chevrolet</li>
        <li draggable="true" data-value="car,Ford">Ford</li>
        <li draggable="true" data-value="car,BMW">BMW</li>
    </ul>
    <p>Drop your favorite cars below:</p>
    <ul id="favoriteCars" style="min-height:100px;background-color:#808080;"></ul>
</div>

<div class="col-xs-12">
    <h4>file drag and drop</h4>
    <div id="target">
        <p>Drag and drop files here...</p>
    </div>
    <table id="fileInfo"></table>
</div>

<div class="col-xs-12" id="scrambleGame">
    <div id="message">
        Refresh to scramble.
    </div>
    <div id="gameBoard">
    </div>
</div>
<script>
    $(document).ready(function () {
        new App.Home.DragAndDropController();
    });
</script>
