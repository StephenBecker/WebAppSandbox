@model WebAppSandbox.Web.Models.Resturant

@{
    ViewBag.Title = "Review";
}
<link href="~/Content/Resturants/Resturant.css" rel="stylesheet" />
<h2>@Model.Name</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { resturantId = Model.Id })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Reviews.FirstOrDefault().Body)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reviews.FirstOrDefault().Rating)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Reviews.FirstOrDefault().ReviewerName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Reviews)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewerName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                @*| @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
            </td>
        </tr>
    }
</table>
